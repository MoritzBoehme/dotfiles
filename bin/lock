#!/bin/bash

B='#00000000' # blank
C='#FFFFFF22' # clear ish
D='#bd93f9'   # default
T='#ff79c6'   # text
W='#ff5555'   # wrong
V='#50fa7b'   # verifying

/usr/bin/i3lock \
    --insidever-color=$C \
    --ringver-color=$V \
    \
    --insidewrong-color=$C \
    --ringwrong-color=$W \
    \
    --inside-color=$B \
    --ring-color=$D \
    --line-color=$B \
    --separator-color=$D \
    \
    --verif-color=$T \
    --wrong-color=$T \
    --time-color=$T \
    --date-color=$T \
    --layout-color=$T \
    --keyhl-color=$W \
    --bshl-color=$W \
    \
    --screen 1 \
    --blur 5 \
    --clock \
    --indicator \
    --time-str="%H:%M:%S" \
    --date-str="%A, %m %Y" \
    --keylayout 1
